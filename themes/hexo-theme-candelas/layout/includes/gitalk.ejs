<div class="gitalk">
  <%- js({src: 'https://cdn.jsdelivr.net/npm/gitalk@1.7.2/dist/gitalk.min.js', integrity: 'sha256-Pmj85ojLaPOWwRtlMJwmezB/Qg8BzvJp5eTzvXaYAfA=', crossorigin: 'anonymous'}) %>
  <%- css({href: 'https://cdn.jsdelivr.net/npm/gitalk@1.7.2/dist/gitalk.css', integrity: 'sha256-AJnUHL7dBv6PGaeyPQJcgQPDjt/Hn/PvYZde1iqfp8U=', crossorigin: 'anonymous'}) %>
  <div id="gitalk-container"></div>
  <script type="text/javascript">
    // eslint-disable-next-line no-undef
    let gitalk = new Gitalk({
      clientID: '<%= theme.gitalk.clientID %>',
      clientSecret: '<%= theme.gitalk.clientSecret %>',
      id: window.location.pathname,
      repo: '<%= theme.gitalk.repo %>',
      owner: '<%= theme.gitalk.owner %>',
      admin: '<%= theme.gitalk.admin %>',
      distractionFreeMode: true
    });

    gitalk.render('gitalk-container');
  </script>
</div>
