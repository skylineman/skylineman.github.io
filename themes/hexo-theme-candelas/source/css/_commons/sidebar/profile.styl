.profile
  height: profile-height
  display: flex
  flex-direction: column
  justify-content: flex-end

  .motto
    flex-grow: 1
    color: profile-avatar-color

    .source,
    .content
      font-size: 16px
      font-weight: bold
      padding: 24px

    .source
      text-align: right

      span
        display: inline-block
        width: 60%
        border-bottom: 1px solid profile-avatar-color

    .quote
      font-size: 64px

    .close
      transform: rotateY(-180deg)

  .basic
    display: flex

    .avatar
      width: 92px
      height: 92px
      border-radius: 50%
      border: 4px solid profile-avatar-color
      background: url("https://avatars.githubusercontent.com/u/26000789?v=4")
      background-size: 110% 110%
      background-position: center center

    .info
      margin-left: 16px
      align-self: flex-end

      .name
        font-size: 32px
        font-weight: 400
        color: profile-avatar-color
        margin-bottom: 4px

      .location
        font-size: 16px
        font-weight: 200
        font-style: italic
        color: profile-location-color

.profile-link
  @extend $nav-link
  font-family: font-icon
  font-size: font-size
  width: font-size
  height: font-size
  padding: 12px 8px
  cursor: pointer
  color: link-color

  &:hover
    text-decoration: none

#github-link
  &:before
    content: "\f09b"

#stackoverflow-link
  &:before
    content: "\f16c"

#email-link
  &:before
    content: "\f0e0"

#rss-link
  &:before
    content: "\f09e"

.balloon
  position: absolute
  top: -10em
  left: 10%
  opacity: 0.7
  width: 10em
  height: 10em
  background: profile-balloon-color-a
  border-radius: 10em 10em 4em 10em
  transform: rotate(45deg)

  @keyframes float1
    0%
      transform: rotate(40deg) translateY(0)  translateX(0)
    100%
      transform: rotate(50deg) translateY(-(profile-height) * 0.8) translateX(-(profile-height) * 0.6)

  @keyframes float2
    0%
      transform: rotate(55deg) translateY(0)  translateX(0)
    100%
      transform: rotate(45deg) translateY(-(profile-height) * 0.8) translateX(-(profile-height) * 0.6)

  @keyframes float3
    0%
      transform: rotate(45deg) translateY(0)  translateX(0)
    100%
      transform: rotate(35deg)  translateY(-(profile-height) * 0.6)  translateX(-(profile-height) * 0.8)

  animation: float1 profile-balloon-time infinite profile-balloon-ease-out
  animation-delay: profile-balloon-time * 0.2

  &:after
    content: ''
    position: absolute
    bottom: -.05em
    right: -.05em
    border-top: 0.5em solid transparent
    border-bottom: 0.5em solid transparent
    border-right: 0.9em solid profile-balloon-color-a
    transform: rotate(45deg)
    border-radius: 1em


.holder
  font-size: profile-balloon-size
  position: relative

  .balloon
    &:nth-child(2)
      left: 50%
      background: profile-balloon-color-b
      animation: float2 profile-balloon-time * 0.95 infinite profile-balloon-ease-out
      animation-delay: profile-balloon-time * 0

      &:after
        border-right: 0.9em solid profile-balloon-color-b

    &:nth-child(3)
      left: 90%
      background: profile-balloon-color-c
      animation: float3 profile-balloon-time * 1.05 infinite profile-balloon-ease-out
      animation-delay: profile-balloon-time * 0.4

      &:after
        border-right: 0.9em solid profile-balloon-color-c
