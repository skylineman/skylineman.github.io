#article-tag
  display: inline-block

.article-tag-list:before
  font-family: font-icon
  content:'\f02c'
  display: inline-block
  margin-right: 10px
  vertical-align: middle
  font-size: 1.5rem
  color: link-color

.article-tag-list-item
  display: inline-block
  margin-top: 4px
  margin-right: 1rem
  font-size: 1.1rem

  &:hover
    font-weight: bold
    transform: translateY(-3px)

@media mq-normal
  .article-tag-list-link
    display: inline-block
    background-color: card-highlight-color
    border-radius: 0 4px 4px 0
    height: 2rem
    line-height: 2rem
    padding: 0 1.4rem 0 1.2rem
    position: relative

    &:after
      content: ""
      background: #ddd
      border-radius: 6px
      height: 6px
      width: 6px
      position: absolute
      right: 10px
      top: calc(50% - 3px)

    &:before
      background-color: card-background-color
      border-bottom: 1rem solid transparent
      border-top 1rem solid transparent
      border-right: 0.8rem solid card-highlight-color
      content: ""
      position: absolute
      left: 0
      top: 0

@media mq-small
  #article-tag
    .article-tag-list-link
      text-decoration: underline

      &:before
        content: "# "
